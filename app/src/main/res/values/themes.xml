<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment4" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="fontFamily"> @font/apple_sd_gothic_neo_m</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="Theme.Assignment4.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="TabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item> <!--선택된 텍스트 색 -->
        <item name="android:textColorSecondary">@color/light_grey</item>  <!--선택 x 텍스트 색 -->
        <item name="colorAccent">@color/black</item> <!--선택된 하단 바 색 -->
    </style>
    <style name ="SplashTheme" parent ="Theme.SplashScreen">
        <item name = "windowSplashScreenBackground">@drawable/bg_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name ="postSplashScreenTheme">@style/Theme.Assignment4</item>
    </style>

    <style name="DatePickerTheme" parent ="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Assignment4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Assignment4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>