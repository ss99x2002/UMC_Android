<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment4" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="Theme.Assignment4.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name ="SplashTheme" parent ="Theme.SplashScreen">
        <item name = "windowSplashScreenBackground">@drawable/bg_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name ="postSplashScreenTheme">@style/Theme.Assignment4</item>
    </style>

    <style name="DatePickerTheme" parent ="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Assignment4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Assignment4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>