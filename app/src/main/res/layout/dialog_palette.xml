<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
        name="colorPick"
        type="com.example.assignment4.ui.dialog.CustomPaletteDialog" />
    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/view_card">

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_palette"/>

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/palette_title"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_warning"
            app:layout_constraintBottom_toTopOf="@id/layout_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/black"
                android:onClick="@{colorPick::onClick}"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_navy"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/navy"
                android:onClick="@{colorPick::onClick}"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/blue"
                android:onClick="@{colorPick::onClick}"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_skyBlue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/sky_blue"
                android:onClick="@{colorPick::onClick}"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_purple"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:backgroundTint="@color/purple"
                android:onClick="@{colorPick::onClick}"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_lightPurple"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/light_purple"
                android:onClick="onClick"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_pink"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/pink"
                android:onClick="onClick"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_peach"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/peach"
                android:onClick="onClick"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/yellow"
                android:onClick="onClick"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_lightGreen"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:backgroundTint="@color/light_green"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>
</layout>